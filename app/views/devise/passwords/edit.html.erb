<%= react_component('CleanNavbar', {root_path: root_path})%>

<div class="container">
  <div class="row py-3">
    <div class="col-12 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
      <h3 class="my-4">비밀번호 재설정</h3>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control #{form_invalid(resource,:password)}" %>
          <small>비밀번호는 <%= @minimum_password_length %>자리 이상이어야 합니다.</small>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control #{form_invalid(resource,:password_confirmation)}" %>
        </div>

        <div class="user--button">
          <%= f.submit "변경", class:"btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>  
</div>
